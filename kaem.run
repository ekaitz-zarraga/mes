    -f m2/mes.M1                                        \
    -f m2/mes.blood-elf-M1                              \
    -o m2/mes.hex2

mkdir -p bin
hex2                                                    \
    --architecture ${stage0_cpu}                        \
    --little-endian                                     \
    --base-address 0x1000000                            \
    -f ${srcdest}lib/m2/${mes_cpu}/ELF-${mes_cpu}.hex2  \
    -f m2/mes.hex2                                      \
    -o bin/mes-m2

echo Running mes-m2
GUILE_LOAD_PATH=${srcdest}mes/module:${srcdest}module
./bin/mes-m2 -c "(display 'Hello,M2-mes!) (newline)"
GUILE_LOAD_PATH=/fubar
cp bin/mes-m2 bin/mes
