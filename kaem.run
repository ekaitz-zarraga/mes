    --architecture ${stage0_cpu}                        \
    --little-endian                                     \
    -f ${srcdest}lib/m2/${mes_cpu}/${mes_cpu}_defs.M1   \
    -f ${srcdest}lib/${mes_cpu}-mes/${mes_cpu}.M1       \
