    -f ${srcdest}lib/linux/open.c                       \
    -f ${srcdest}lib/mes/mes_open.c                     \
    -f ${srcdest}lib/string/strlen.c                    \
    -f ${srcdest}lib/mes/eputs.c                        \
    -f ${srcdest}lib/mes/fdputc.c                       \
    -f ${srcdest}lib/mes/eputc.c                        \
                                                        \
    -f ${srcdest}include/time.h                         \
