                                                        \
    -f ${srcdest}lib/mes/__assert_fail.c                \
    -f ${srcdest}lib/mes/assert_msg.c                   \
                                                        \
    -f ${srcdest}lib/mes/fdputc.c                       \
    -f ${srcdest}lib/string/strncmp.c                   \
    -f ${srcdest}lib/posix/getenv.c                     \
    -f ${srcdest}lib/mes/fdputs.c                       \
