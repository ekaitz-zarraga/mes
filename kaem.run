    -f ${srcdest}lib/posix/setenv.c                     \
    -f ${srcdest}lib/linux/access.c                     \
    -f ${srcdest}include/linux/m2/kernel-stat.h         \
    -f ${srcdest}include/sys/stat.h                     \
