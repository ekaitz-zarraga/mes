(define mes? (pair? (current-module)))
(gc)
((if mes? core:display display) (gc-stats))
((if mes? core:display display) "\n")
(define (loop n)
  (if (> n 0) (loop (- n 1))))
(loop 100000)
(gc)
((if mes? core:display display) (gc-stats))
((if mes? core:display display) "\n")
